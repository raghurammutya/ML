[run]
source = app
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */venv/*
    */.venv/*
    */migrations/*
    */alembic/*
    app/main.py
    # Exclude test utilities
    conftest.py

[report]
# Show missing lines
show_missing = True

# Fail if coverage is below this percentage
fail_under = 40

# Precision for coverage percentage
precision = 2

# Sort report by coverage percentage
sort = Cover

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if 0:
    if False:
    if __name__ == .__main__.:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

    # Type checking blocks
    if TYPE_CHECKING:

    # Pass statements
    pass

[html]
directory = htmlcov
title = TradingView Backend Coverage Report

[xml]
output = coverage.xml
