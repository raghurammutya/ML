# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development

# Database Configuration (Dev PostgreSQL)
DB_PASSWORD=stocksblitz123
DB_HOST=localhost
DB_PORT=8003
DB_NAME=stocksblitz_dev
DB_USER=stocksblitz

# Redis Configuration (Dev Redis)
REDIS_URL=redis://localhost:8002

# Ticker service
TICKER_SERVICE_URL=http://localhost:8080
TICKER_SERVICE_TIMEOUT=30
TICKER_SERVICE_MODE=FULL

# Security
JWT_SECRET_KEY=dev_secret_key_change_in_production_12345678901234567890
JWT_ALGORITHM=HS256

# API Settings
API_TITLE=TradingView Backend API (Development)
API_VERSION=1.0.0

# CORS Configuration (Dev allows all localhost)
# Note: This is a JSON array in the code, but environment variable as list

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Performance (Dev - smaller cache)
PRELOAD_DAYS=7
MAX_MEMORY_CACHE_SIZE=10000
REFRESH_INTERVAL=300

# FO Stream
FO_STREAM_ENABLED=true
FO_OPTIONS_CHANNEL=ticker:nifty:options
FO_UNDERLYING_CHANNEL=ticker:nifty:underlying

# Subscription events
SUBSCRIPTION_EVENTS_ENABLED=true
REDIS_CHANNEL_PREFIX=ticker:nifty

# Backfill
BACKFILL_ENABLED=true
BACKFILL_CHECK_INTERVAL_SECONDS=300
BACKFILL_SUBSCRIPTION_AWARE=true
BACKFILL_IMMEDIATE_ON_SUBSCRIBE=true
